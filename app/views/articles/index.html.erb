<div class="container">
  <h1>Articles</h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Category</th>
        <th>User</th>
        <th>Content</th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_path(article) %></td>
        <td><%= article.category %></td>
        <td><%= article.user.email %></td>
        <td><%= article.content %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
